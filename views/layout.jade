doctype html
html
  head
    title Hello world!

    link(
      rel   = "stylesheet"
      type  = "text/css"
      href  = "/css/semantic.min.css"
      media = "all"
    )

    block head
  body.ui.one.column.page.grid
    .column
      .row
         header.ui.segment
          include header.jade
      .row
        nav.ui.left.floated.vertical.menu
          include nav.jade
        main.ui.segment
          block content
      .row
        footer.ui.segment
          include footer.jade

    script(
      src = "/javascript/jquery-2.1.1.min.js"
    )

    script(
      src = "/javascript/semantic.min.js"
    )

