doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0')
    meta(name='description', content='')
    meta(name='keywords', content='')
    meta(name='author', content='')
    title #{title}
    //if lt IE 9
      script(src='http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js')
      script(src='http://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.js')
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/animate.css/3.1.0/animate.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/app.css')
    script(src='//cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.2/modernizr.min.js', type='application/javascript')
    script(src='//cdnjs.cloudflare.com/ajax/libs/fastclick/1.0.2/fastclick.min.js', type='application/javascript')
  body
    section.wrapper
      nav.navbar.navbar-default.navbar-top.navbar-fixed-top(role='navigation')
        .navbar-header
          a.navbar-brand(href='#')
            .brand-logo Statik.io
        .nav-wrapper
          ul.nav.navbar-nav
            li
              a(href='#', data-toggle='navbar-search')
                em.fa.fa-search
                | &nbsp;&nbsp;Click To Search
        form.navbar-form(role='search')
          .form-group.has-feedback
            input.form-control(type='text', placeholder='Type and hit Enter..')
            .fa.fa-times.form-control-feedback(data-toggle='navbar-search-dismiss')
          button.hidden.btn.btn-default(type='submit') Submit
      aside.aside
        nav.sidebar
          ul.nav
            li
              .user-block
                .user-block-picture
                  img.img-thumbnail.img-circle(src='/img/demoUser.jpg', alt='Avatar', width='60', height='60')
                .user-block-info
                  span.user-block-name.item-text {USERNAME}
            li
              a.no-submenu(href='/')
                em.fa.fa-home
                span.item-text Home
            li
              a.no-submenu(href='/about')
                em.fa.fa-info
                span.item-text About &amp; Download
            li
              a.no-submenu(href='/faq')
                em.fa.fa-question
                span.item-text FAQ
            li &nbsp;
            li &nbsp;
            li
              a.no-submenu(href='/plugins')
                em.fa.fa-bars
                span.item-text Plugin List
            li
              a.no-submenu(href='/stats')
                em.fa.fa-globe
                span.item-text Global Statistics
            li
              a.no-submenu(href='/status')
                em.fa.fa-terminal
                span.item-text Backend Status
            li
              a.has-submenu(href='/acp', data-toggle='collapse-next')
                em.fa.fa-user
                span.item-text Account
              ul.nav.collapse
                li
                  a.no-submenu(href='/users/login', data-toggle='')
                    span.item-text Login
                li
                  a.no-submenu(href='/users/signup', data-toggle='')
                    span.item-text Sign-up
            li &nbsp;
            li &nbsp;
            li
              a.no-submenu(href='/api')
                em.fa.fa-cogs
                span.item-text API
            li.nav-footer
              .nav-footer-divider
              .btn-group.text-center
                a.btn.btn-link(target='_blank', href='https://github.com/Statik-Metrics', data-toggle='tooltip', data-title='Github')
                  em.fa.fa-github-square.fa-2x.text-muted
                a.btn.btn-link(target='_blank', href='https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&hosted_button_id=4LWT2BNB3AV9L', data-toggle='tooltip', data-title='Donate')
                  em.fa.fa-dollar.fa-2x.text-muted
                a.btn.btn-link(target='_blank', href='http://webchat.esper.net/?channels=statik', data-toggle='tooltip', data-title='IRC')
                  em.fa.fa-weixin.fa-2x.text-muted
      section.main-content
        if flashsuccess != ''
            div.alert.alert-success(role='alert')
                b Success!
                | #{flashsuccess}
        if flasherror != ''
            div.alert.alert-danger(role='alert')
                b Error!
                | #{flasherror}
        block content
        
      .footer
        .container
            p &copy; Statik, Created and Maintained by the Statik Team. Plugins are owned and Maintained by their respective authors.
    // END Main wrapper
    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.2.0/js/bootstrap.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/chosen/1.1.0/chosen.jquery.min.js')
    script(src='//cdn.jsdelivr.net/bootstrap.filestyle/1.1.0/js/bootstrap-filestyle.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery-sparklines/2.1.2/jquery.sparkline.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/jQuery-slimScroll/1.3.1/jquery.slimscroll.min.js')
    script(src='/js//app.js')
    script(src='/js/animo.min.js')
