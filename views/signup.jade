extends layouts/login_layout
block content
  .container
     if error != ''
        div.alert.alert-danger(role='alert') #{error}
    .login-form-section
      .login-content.animated.fadeIn
        form(action='/users/signup', method='POST')
          .section-title
            h3 Statik - Register
            hr
          .textbox-wrap
            .input-group
              span.input-group-addon
                i.fa.fa-envelope
              input.form-control(type='email', required='', name='email', placeholder='Email Address')
          .textbox-wrap
            .input-group
              span.input-group-addon
                i.fa.fa-key
              input.form-control(type='password', required='', name='password', placeholder='Password')
          .textbox-wrap
            .input-group
              span.input-group-addon
                i.fa.fa-key
              input.form-control(type='password', required='', name='confirmPassword', placeholder='Confirm Password')
          input(type='hidden' name='_csrf' value='#{csrfToken}')
          .login-form-links.animated.fadeIn
            .clearfix
              a.btn.btn-primary.pull-left(href='/users/login/')
                i.fa.fa-chevron-left
                |  &nbsp; Back to Login
              button.btn.btn-success.pull-right(type='submit')
                | Register &nbsp;
                i.fa.fa-chevron-right
