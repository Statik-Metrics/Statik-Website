extends ../layouts/layout
block title
    |Statik
block content
    .row
        .col-lg-3
        .col-lg-4
            form(action='/ucp/email', method='POST')
                .section-title
                    h3 Set main email
                    p The main email will be used when communicating with you. It is also used for the avatar with the gravatar service.
                    hr
                .textbox-wrap
                    .input-group
                        span.input-group-addon
                            i.fa.fa-envelope
                        select.form-control(name='email')
                            each item in emails
                                if (item == user.selectedEmail)
                                    option(selected) #{item}
                                else
                                    option #{item}
                br
                .login-form-links.animated.fadeIn
                    .clearfix
                        button.btn.btn-success.pull-right(type='submit')
                            | Submit &nbsp;
                            i.fa.fa-chevron-right
